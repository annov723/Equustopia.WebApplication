<div id="signupModal" class="modal" style="display: none;">
    <div class="login-content">
        <span id="signupError" class="login-error"></span>
        <input type="text" id="signupName" class="login-input" placeholder="name" min="2" max="50" required>
        <input type="email" id="signupEmail" class="login-input" placeholder="email" min="3" max="255" required>
        <input type="password" id="signupPassword" class="login-input" placeholder="password" min="4" max="60" required>
        <input type="password" id="signupPasswordRepeat" class="login-input" placeholder="repeat password" onkeydown="if(event.key == 'Enter') attemptSignUp()" min="4" max="60" required>

        <button type="submit" class="classic-button-long" onclick="attemptSignUp()">sign up</button>
    </div>
</div>