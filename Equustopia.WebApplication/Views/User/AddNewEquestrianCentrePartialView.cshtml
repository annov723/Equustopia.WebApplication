<head>
    <link rel="stylesheet" href="~/css/equestrianCentre/equestrian-centre-partial-view.css" />
</head>

<div id="addCentreModal" class="modal" style="display: none;">
    <div class="modal-content">
        <div class="form-content">
            <p class="form-title">add new centre</p>

            <div class="form-group">
                <label for="centreName">centre name</label>
                <input type="text" id="centreName" name="name" class="form-control" placeholder="name" required/>
            </div>
            <div class="form-group">
                <label for="address">address</label>
                <input type="text" id="address" name="address" class="form-control" placeholder="address" required/>
            </div>
            <div class="form-group">
                <label for="centreOwner">owner</label>
                <input type="text" id="centreOwner" name="owner" class="form-control-readonly" value=@Model.Name readonly/>
            </div>

            <span id="addCentreError" class="add-centre-error"></span>

            <button type="submit" class="edit-button" onclick="addNewEquestrianCentre()">add centre</button>
        </div>

        <div class="photo-content">
            <p class="form-title">upload centre photo</p>
            <img src="~/resources/icons/centre-icon.svg" class="centre-icon" alt="centre icon" />
            <input type="file" id="centrePhoto" name="photo" accept="image/*" style="display: none" />
            <button class="upload-photo-button" onclick="document.getElementById('centrePhoto').click()">upload photo</button>
            <span class="close" onclick="closeAddEquestrianCentreView()">&times;</span>
        </div>
    </div>
</div>

<script src="~/js/user/userMainPage.js"></script>



