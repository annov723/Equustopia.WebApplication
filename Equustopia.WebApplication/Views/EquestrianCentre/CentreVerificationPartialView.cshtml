@model Equustopia.WebApplication.Models.Main.EquestrianCentre

<div id="verification-modal" class="modal" style="display: none">
    <div class="request-modal-content">
        <p class="request-form-title">Centre Verification</p>

        <div class="request-info" id="verification-modal-body"></div>
        <div class="request-footer" id="verification-modal-footer">
            <button id="new-request-button" class="classic-button" onclick="createNewCentreRequest(@Model.id)">new request</button>
            <button class="classic-button" onclick="closeCentreVerificationView()">close</button>
        </div>
    </div>
</div>

